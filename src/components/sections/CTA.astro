---
import Button from '../../components/ui/Button.astro';

export interface Props {
  title: string;
  description?: string;
  ctaPrimary?: {
    text: string;
    href: string;
    icon?: string;
  };
  ctaSecondary?: {
    text: string;
    href: string;
    icon?: string;
  };
}

const { title, description, ctaPrimary, ctaSecondary } = Astro.props;
---

<section class="cta-section">
  <div class="cta-content">
    <h2>{title}</h2>
    {description && <p>{description}</p>}
    
    {(ctaPrimary || ctaSecondary) && (
      <div class="cta-buttons">
        {ctaPrimary && (
          <Button
            href={ctaPrimary.href}
            variant="primary"
            size="large"
            icon={ctaPrimary.icon}
          >
            {ctaPrimary.text}
          </Button>
        )}
        {ctaSecondary && (
          <Button
            href={ctaSecondary.href}
            variant="secondary"
            size="large"
            icon={ctaSecondary.icon}
          >
            {ctaSecondary.text}
          </Button>
        )}
      </div>
    )}
  </div>
  
  <div class="cta-decoration"></div>
</section>

<style>
  .cta-section {
    @apply py-20 px-4 sm:px-6 lg:px-8 text-center relative overflow-hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .cta-decoration {
    @apply absolute w-[300px] h-[300px] rounded-full bg-white/10 -top-[150px] -right-[150px];
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  .cta-content {
    @apply relative z-10;
  }

  .cta-content h2 {
    @apply text-white text-4xl font-bold mb-4;
  }

  .cta-content p {
    @apply text-white/95 text-xl mb-8 max-w-2xl mx-auto;
  }

  .cta-buttons {
    @apply flex flex-wrap justify-center gap-6;
  }

  @media (max-width: 640px) {
    .cta-buttons {
      @apply flex-col items-center;
    }
  }
</style>