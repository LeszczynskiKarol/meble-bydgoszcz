    verified: true
  }
];

let googleReviews = null;
let googleRating = null;
let googleTotalReviews = null;

if (import.meta.env.PROD) {
  try {
    const apiEndpoint = import.meta.env.PUBLIC_REVIEWS_API_ENDPOINT;
    if (apiEndpoint) {
      const response = await fetch(apiEndpoint);
      if (response.ok) {
        const data = await response.json();
        googleReviews = data.reviews;
        googleRating = data.rating;
        googleTotalReviews = data.totalReviews;
      }
    }
  } catch (error) {
    console.error('Failed to fetch Google reviews during build:', error);
  }
}

const displayReviews = googleReviews || fallbackWardrobeReviews;
const displayRating = googleRating || 4.9;
const displayTotalReviews = googleTotalReviews || 127;

---

<BaseLayout title="Szafy i garderoby na wymiar Bydgoszcz - Projektowanie"
description="Chcesz zlecić wykonanie szafy czy garderoby na wymiar w Bydgoszczy? Powierz to nam!"
keywords={[
    "Szafy na wymiar Bydgoszcz",
    "Garderoby na wymiar Bydgoszcz",
    "Szafy i garderoby Bydgoszcz",
    "Szafy i garderoby na wymiar Bydgoszcz",
    ]}
>
  <!-- Hero Section -->
  <Hero
    title="Szafy i garderoby na wymiar <span class='highlight'>Bydgoszcz</span>"
    subtitle=""
    description="Projektujemy i produkujemy szafy oraz garderoby idealnie dopasowane do Twojej przestrzeni i potrzeb. Maksymalna funkcjonalność, perfekcyjna organizacja."
    ctaPrimary={{ text: "📞 Darmowa wycena", href: "/kontakt" }}
    ctaSecondary={{ text: "Zobacz realizacje szaf →", href: "/realizacje#szafy" }}
    images={[
      { src: "https://www.meblesystem.pl/wp-content/uploads/2024/04/szafsitow-3.jpg", alt: "Szafa przesuwna na wymiar Bydgoszcz" },
      { src: "https://www.meblesystem.pl/wp-content/uploads/2024/04/szuchdl-2_opt.webp", alt: "Garderoba walk-in Bydgoszcz" },
      { src: "https://www.meblesystem.pl/wp-content/uploads/2024/04/Meble-Tu-12.jpg", alt: "Szafa uchylna Bydgoszcz" },
      { src: "https://www.meblesystem.pl/wp-content/uploads/2024/04/warszaf-3.jpg", alt: "Garderoba otwarta Bydgoszcz" }
    ]}
    variant="wardrobe"
  />

  <!-- Wardrobe Types Section -->
  <section class="wardrobe-types">
    <div class="container">
      <div class="section-header">
        <h2>Rodzaje szaf i garderób</h2>
        <p>Znajdź idealne rozwiązanie do przechowywania przedmiotów i ubrań dla swojego domu</p>
      </div>
      <div class="wardrobe-types-grid">
        {wardrobeTypes.map((type) => (
          <div class="wardrobe-type-card" style={`background-image: url('${type.image}');`}>
            <div class="wardrobe-type-content">
              <h3>{type.title}</h3>
              <p>{type.description}</p>
              <div class="wardrobe-type-features">
                {type.features.map((feature) => (
                  <span>{feature}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features">
    <div class="container">
      <div class="section-header">
        <h2>Dlaczego nasze szafy i garderoby na wymiar?</h2>
        <p>Perfekcyjna organizacja przestrzeni i najwyższa jakość wykonania</p>
      </div>
      <div class="features-grid">
        {features.map((feature) => (
          <div class="feature-card">
            <div class="feature-icon">{feature.icon}</div>
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process">
    <div class="container">
      <div class="section-header">
        <h2>Jak powstaje Twoja szafa na wymiar?</h2>
        <p>5 kroków do idealnej organizacji przestrzeni</p>
      </div>
      <div class="process-grid">
        {wardrobeProcessSteps.map((step) => (
          <div class="process-card">
            <div class="process-number">{step.number}</div>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <Gallery
    title="Nasze realizacje szaf i garderób"
    subtitle="Zobacz szafy i garderoby, które zaprojektowaliśmy dla klientów w Bydgoszczy"
    images={galleryImages}
    viewAllLink="/realizacje#szafy"
  />

<Reviews
  title="Opinie o naszych szafach i garderobach"
  subtitle="Zobacz, co mówią klienci o naszych szafach na wymiar"
  fallbackReviews={displayReviews}
  rating={displayRating}
  totalReviews={displayTotalReviews}
  apiEndpoint={import.meta.env.PUBLIC_REVIEWS_API_ENDPOINT}
/>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>Zamów swoją idealną szafę</h2>
      <p>Zadzwoń lub napisz - stworzymy szafę Twoich marzeń</p>
      <div class="cta-buttons">
        <Button
          href="tel:+48576060832"
          variant="primary"
          size="large"
          icon="📞"
        >
          Zadzwoń: 576 060 832
        </Button>
        <Button
          href="/kontakt"
          variant="secondary"
          size="large"
        >
          Napisz do nas
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Wardrobe Types Section */
  .wardrobe-types {
    padding: 5rem 5%;
    background: var(--white);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: var(--primary-color, #1a1a1a);
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
  }

  .section-header h2::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--secondary-color, #764ba2);
    border-radius: 2px;
  }

  .section-header p {
    font-size: 1.2rem;
    color: var(--text-light, #666);
    max-width: 600px;
    margin: 0 auto;
  }

  .wardrobe-types-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  @media (max-width: 1200px) {
    .wardrobe-types-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .wardrobe-types-grid {
      grid-template-columns: 1fr;
    }
  }

  .wardrobe-type-card {
    position: relative;
    height: 400px;
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-size: cover;
    background-position: center;
  }

  .wardrobe-type-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9),
      rgba(0, 0, 0, 0.2)
    );
    z-index: 1;
    transition: background 0.3s ease;
  }

  .wardrobe-type-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .wardrobe-type-card:hover::before {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8),
      rgba(0, 0, 0, 0.1)
    );
  }

  .wardrobe-type-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    z-index: 2;
    color: var(--white, #ffffff);
  }

  .wardrobe-type-content h3 {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
    transform: translateY(0);
    transition: transform 0.3s ease;
  }

  .wardrobe-type-card:hover .wardrobe-type-content {
    transform: translateY(-5px);
  }

  .wardrobe-type-content p {
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0.95;
  }

  .wardrobe-type-features {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .wardrobe-type-features span {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    backdrop-filter: blur(10px);
  }

  /* Features Section */
  .features {
    padding: 5rem 5%;
    background: var(--accent-color, #f4f4f4);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
    margin-top: 3rem;
  }

  @media (max-width: 1200px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  .feature-card {
    background: var(--white, #ffffff);
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .feature-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, #2d5016, #5a8f2d);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .feature-card:hover::before {
    transform: scaleX(1);
  }

  .feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  }

  .feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: var(--white, #ffffff);
  }

  .feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--primary-color, #1a1a1a);
  }

  .feature-card p {
    color: var(--text-light, #666);
    line-height: 1.8;
  }

  /* Process Section */
  .process {
    padding: 5rem 5%;
    background: var(--white, #ffffff);
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 2rem;
    margin-top: 3rem;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 1200px) {
    .process-grid {
      grid-template-columns: repeat(2, 1fr);
      max-width: 700px;
    }
  }

  @media (max-width: 600px) {
    .process-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
    }
  }

  .process-card {
    background: var(--white, #ffffff);
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    text-align: center;
    position: relative;
    transition: transform 0.3s ease;
  }

  .process-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .process-number {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: var(--white, #ffffff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0 auto 1.5rem;
    box-shadow: 0 5px 20px rgba(45, 80, 22, 0.4);
  }

  .process-card h3 {
    color: var(--primary-color, #1a1a1a);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .process-card p {
    color: var(--text-light, #666);
    line-height: 1.8;
  }

  
  /* CTA Section */
  .cta-section {
    padding: 5rem 5%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    text-align: center;
    position: relative;
