<script define:vars={{ galleryData, ITEMS_PER_PAGE }}>
  let currentPage = 1;
  let currentCategory = 'wszystkie';
  let filteredData = [...galleryData];
  let currentLightboxIndex = 0;

  window.addEventListener('DOMContentLoaded', () => {
    const initialHash = window.location.hash.slice(1) || 'wszystkie';
    currentCategory = initialHash;
    
    filterGallery();
    updateActiveTab();
    setupCategoryButtons();
    setupLightboxEvents();
    
    window.addEventListener('hashchange', () => {
      const hash = window.location.hash.slice(1) || 'wszystkie';
      if (hash !== currentCategory) {
        currentCategory = hash;
        currentPage = 1;
        filterGallery();
        updateActiveTab();
      }
    });
  });

  function setupCategoryButtons() {
    // Desktop buttons
    document.querySelectorAll('.category-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const category = this.dataset.category;
        window.location.hash = category;
        currentCategory = category;
        currentPage = 1;
        filterGallery();
        updateActiveTab();
      });
    });
    
    // Mobile buttons
    document.querySelectorAll('.mobile-filter-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const category = this.dataset.category;
        window.location.hash = category;
        currentCategory = category;
        currentPage = 1;
        filterGallery();
        updateActiveTab();
      });
    });
  }

  function updateActiveTab() {
    document.querySelectorAll('.category-btn, .mobile-filter-btn').forEach(btn => {
      btn.classList.toggle('active', btn.dataset.category === currentCategory);
    });
  }

  function filterGallery() {
    if (currentCategory === 'wszystkie') {
      filteredData = [...galleryData];
    } else {
      filteredData = galleryData.filter(item => item.category === currentCategory);
    }
    renderGallery();
    renderPagination();
  }

  function renderGallery() {
    const gallery = document.getElementById('gallery');
    if (!gallery) return;
    
    const start = (currentPage - 1) * ITEMS_PER_PAGE;
    const end = start + ITEMS_PER_PAGE;
    const items = filteredData.slice(start, end);
    
    gallery.innerHTML = items.map((item, index) => `
      <div class="gallery-item" data-index="${start + index}">
        <div class="gallery-item-inner">
          <div class="image-container">
            <img src="${item.src}" alt="Realizacja" loading="lazy">
          </div>
          <div class="gallery-overlay"></div>
        </div>
      </div>
    `).join('');

    document.querySelectorAll('.gallery-item').forEach(item => {
      item.addEventListener('click', function() {
        openLightbox(parseInt(this.dataset.index));
      });
    });
  }

  function renderPagination() {
    const totalPages = Math.ceil(filteredData.length / ITEMS_PER_PAGE);
    const pagination = document.getElementById('pagination');
    
    if (!pagination) return;
    
    if (totalPages <= 1) {
      pagination.innerHTML = '';
      return;
    }

    let html = '';
    
    if (currentPage > 1) {
      html += `<button class="pag-btn pag-prev" onclick="changePage(${currentPage - 1})">‚Üê</button>`;
    }
    
    for (let i = 1; i <= totalPages; i++) {
      if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
        html += `<button class="pag-btn pag-num ${i === currentPage ? 'pag-active' : ''}" onclick="changePage(${i})">${i}</button>`;
      } else if (i === currentPage - 2 || i === currentPage + 2) {
        html += `<span class="pag-dots">...</span>`;
      }
    }
    
    if (currentPage < totalPages) {
      html += `<button class="pag-btn pag-next" onclick="changePage(${currentPage + 1})">‚Üí</button>`;
    }

    pagination.innerHTML = html;
  }

  window.changePage = function(page) {
    const totalPages = Math.ceil(filteredData.length / ITEMS_PER_PAGE);
    if (page >= 1 && page <= totalPages) {
      currentPage = page;
      renderGallery();
      renderPagination();
      document.querySelector('.gallery').scrollIntoView({ behavior: 'smooth' });
    }
  }

  function openLightbox(index) {
    currentLightboxIndex = index;
    const lightbox = document.getElementById('lightbox');
    const img = document.getElementById('lightbox-img');
    
    img.src = filteredData[index].src;
    lightbox.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeLightbox() {
    document.getElementById('lightbox').classList.remove('active');
    document.body.style.overflow = '';
  }

  function navigateLightbox(dir) {
    currentLightboxIndex = (currentLightboxIndex + dir + filteredData.length) % filteredData.length;
    document.getElementById('lightbox-img').src = filteredData[currentLightboxIndex].src;
  }

  function setupLightboxEvents() {
    document.getElementById('lightbox-close').addEventListener('click', closeLightbox);
    document.getElementById('lightbox-prev').addEventListener('click', () => navigateLightbox(-1));
    document.getElementById('lightbox-next').addEventListener('click', () => navigateLightbox(1));
    document.getElementById('lightbox').addEventListener('click', (e) => {
      if (e.target.id === 'lightbox') closeLightbox();
    });

    document.addEventListener('keydown', (e) => {
      if (!document.getElementById('lightbox').classList.contains('active')) return;
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowLeft') navigateLightbox(-1);
      if (e.key === 'ArrowRight') navigateLightbox(1);
    });
  }
</script>

